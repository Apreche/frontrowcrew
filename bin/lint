#!/bin/bash
set -euo pipefail
# Run the Github Super-Linter locally

script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")"; pwd -P)
cd "$script_dir"
echo "${script_dir}/.."

docker pull ghcr.io/super-linter/super-linter:slim-latest
docker run --env-file="${script_dir}"/.lintenv -v "${script_dir}"/..:/tmp/lint github/super-linter:slim-latest
