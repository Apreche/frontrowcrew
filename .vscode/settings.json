{
    "[python]": {
        "editor.defaultFormatter": null,
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true
        }
    },
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.profiles.linux": {
        "django": {
            "path": "poetry",
            "icon": "console",
            "args": [
                "run",
                "/workspace/manage.py",
                "shell_plus",
                "--quiet-load",
                "--print-sql",
                "--force-color"
            ]
        },
        "zsh": null,
        "JavaScript Debug Terminal": null
    },
    "search.exclude": {
        ".ansible": true,
        ".devcontainer": true,
        ".github": true,
        ".gitignore": true,
        ".venv": true,
        ".vscode": true,
        "static/src/css/main.css.map": true,
        "poetry.lock": true,
        "package-lock.json": true,
        "static/vendor": true,
        "bin": true,
        "creator/static/bootstrap": true,
        "creator/static/dropzone": true
    }
}