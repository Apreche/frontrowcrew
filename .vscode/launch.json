{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Runserver Plus",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver_plus"
            ],
            "django": true
        },
        {
            "name": "Django Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--noinput"
            ],
            "django": true
        }
    ]
}
